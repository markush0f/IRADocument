---
import "../styles/global.css";
import "@fontsource/outfit/200.css";
import "@fontsource/outfit/400.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="min-h-screen flex flex-col relative overflow-hidden selection:bg-indigo-500/30 text-zinc-100 font-['Outfit']"
    >
        <div
            class="absolute inset-0 -z-10 h-full w-full bg-[radial-gradient(#1e1e2e_1px,transparent_1px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)] opacity-20"
        >
        </div>
        <header
            class="absolute top-0 left-0 w-full p-8 flex items-center gap-4 z-10"
        >
            <img
                src="/ira-logo.png"
                alt="IRA Logo"
                class="w-10 h-10 object-contain"
            />
            <span class="text-lg font-extralight tracking-[0.2em] opacity-90">
                IRADocument
            </span>
        </header>

        <main class="flex-1 flex flex-col items-center justify-center w-full">
            <slot />
        </main>

        <a
            href="https://github.com"
            target="_blank"
            rel="noopener noreferrer"
            class="absolute bottom-6 right-6 p-2 text-zinc-500 hover:text-white transition-colors duration-300 hover:scale-110 active:scale-95"
            aria-label="Visit GitHub"
        >
            <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-6 h-6"
            >
                <path
                    d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                ></path>
                <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
        </a>
    </body>
</html>
